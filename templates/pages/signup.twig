{% extends "layouts/base.twig" %}

{% block title %}Create Account - RealPro{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="/css/form.css">
    <link rel="stylesheet" href="/css/land.css">
{% endblock %}

{% block content %}
<div class="page active" id="signupPage">
    <div class="auth-container">
        <div class="auth-card">
            <div class="auth-header">
                <div class="auth-logo" onclick="window.location.href='/'">
                    RealPro
                </div>
                <h2 class="auth-title">Create Account</h2>
                <p class="auth-subtitle">Join thousands of teams using RealPro</p>
            </div>

            <form id="signupForm" method="POST" action="/signup" class="auth-form">
                <div class="form-group">
                    <label class="form-label" for="signupName">
                        Full Name
                    </label>
                    <input
                        type="text"
                        class="form-input {{ errors.name ? 'error' : '' }}"
                        id="signupName"
                        name="name"
                        value="{{ old.name }}"
                        required
                        placeholder="Enter your full name"
                    />
                    {% if errors.name %}
                        <div class="error-message">{{ errors.name }}</div>
                    {% endif %}
                </div>

                <div class="form-group">
                    <label class="form-label" for="signupEmail">
                        Email Address
                    </label>
                    <input
                        type="email"
                        class="form-input {{ errors.email ? 'error' : '' }}"
                        id="signupEmail"
                        name="email"
                        value="{{ old.email }}"
                        required
                        placeholder="Enter your email"
                    />
                    {% if errors.email %}
                        <div class="error-message">{{ errors.email }}</div>
                    {% endif %}
                </div>

                <div class="form-group">
                    <label class="form-label" for="signupPassword">
                        Password
                    </label>
                    <input
                        type="password"
                        class="form-input {{ errors.password ? 'error' : '' }}"
                        id="signupPassword"
                        name="password"
                        required
                        placeholder="Create a password (min. 6 characters)"
                    />
                    {% if errors.password %}
                        <div class="error-message">{{ errors.password }}</div>
                    {% endif %}
                </div>

                <div class="form-group">
                    <label class="form-label" for="confirmPassword">
                        Confirm Password
                    </label>
                    <input
                        type="password"
                        class="form-input {{ errors.confirmPassword ? 'error' : '' }}"
                        id="confirmPassword"
                        name="confirmPassword"
                        required
                        placeholder="Confirm your password"
                    />
                    {% if errors.confirmPassword %}
                        <div class="error-message">{{ errors.confirmPassword }}</div>
                    {% endif %}
                </div>

                <div class="form-options">
                    <label class="checkbox-container">
                        <input type="checkbox" name="terms" required />
                        <span class="checkmark"></span>
                        I agree to the <a href="#" class="terms-link">Terms of Service</a> and <a href="#" class="terms-link">Privacy Policy</a>
                    </label>
                </div>

                <button 
                    type="submit" 
                    class="btn btn-primary login-btn {{ isLoading ? 'loading' : '' }}"
                    id="submitBtn"
                    {% if isLoading %}disabled{% endif %}
                >
                    {% if isLoading %}
                        <div class="spinner"></div>
                        Creating Account...
                    {% else %}
                        Create Account
                    {% endif %}
                </button>
            </form>

            <div class="auth-divider">
                <span>Or continue with</span>
            </div>

            <div class="social-login">
                <button type="button" class="btn btn-social btn-google">
                    <span class="social-icon">üîç</span>
                    Google
                </button>
                <button type="button" class="btn btn-social btn-github">
                    <span class="social-icon">üíª</span>
                    GitHub
                </button>
            </div>
            
            <div class="auth-switch">
                Already have an account?{" "}
                <a href="/login" class="auth-link">
                    Sign in here
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    <script src="/js/signup.js"></script>
{% endblock %}